@page "/todo"
@rendermode InteractiveServer

<h3>Todo (@todos.Count(todo => !todo.IsDone))</h3>

<!--Takes input and performs Addtodo() when clicked-->
<input @bind="newTodo"/>
<button @onclick="AddTodo">Add a Task</button>

<!--Displays the contents of the list todos-->
<ol>
    @foreach (var todo in todos)
    {
        <li>
            <input type="checkbox" @bind="todo.IsDone" />
            <input @bind="todo.Title" />
        </li>
       
    }
</ol>

@code {
private List<TodoItem> todos = new(); //List item for the tasks you have
string newTodo = ""; 

//Method that adds the todo
 void AddTodo()
    {
        if (string.IsNullOrWhiteSpace(newTodo) == false)
        {
            todos.Add(new TodoItem { Title = newTodo }); //Adds a new item to the todos list
            newTodo = string.Empty; //Resets the value of the input to empty- Remember the input is binded to whatever newTodo is
        }
    }

}
